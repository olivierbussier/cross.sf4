{% extends 'base.html.twig' %}

{% block title %}Parcours marche{% endblock %}

{% block main_page %}

    {% import 'macros/bouton.html.twig' as control %}

	<div class="container">

		<div class="col-xs-12">
			<h3>Le Parcours Marche</h3>
		</div>

		<div class="col-xs-12">
			<p>Il mesure 6 Km</p>
			<p>Allure libre</p>
			<p>Le départ est donné à 8h45</p>
			<p>Les tarifs sont indiqués sur la page <a href="{{ url('inscription') }}">Inscriptions</a></p>
			<p>Ci-dessous vous trouverez le parcours interactif ainsi que le profil</p>
		</div>

		<div class="col-xs-12">
            {{ control.bouton(
                "S'inscrire en ligne",
                "https://inscriptions.perfevent.com/biviers2018/register/28804",
                '_inscr',
                "btn-block btn-success btn-lg") }}
		</div>

		<div class="col-xs-12">
			<iframe width="100%" height="800" frameborder="0" scrolling="no" src="{{ asset('maps/maps.php?p=marche') }}"></iframe>
		</div>

		<div class="col-xs-12">
			<img src="{{ asset('maps/deniv_marche.jpg') }}" class="w100">
		</div>
	</div>

{% endblock %}

