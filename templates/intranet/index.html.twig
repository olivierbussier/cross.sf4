{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur l'Intranetdu GUC{% endblock %}

{% block main_page %}

    {% import 'macros/bouton.html.twig' as control %}

    <div class="container">
        <h1>Dump adh</h1>
        {{ dump(app) }}

        <div class="col-xs-12">
            <h3>Bienvenue sur l'Intranet {{ app.user.prenom ~ ' ' ~ app.user.nom }} , </h3>
        </div>

        <div class="container">
            <div class="col-xs-12">
                <h3>Pour vous déconnecter :</h3>
            </div>
            <div class="col-xs-12">
                {{  control.bouton(
                    ' Déconnexion',
                    url('deconnexion'),
                    '',
                    'btn-block btn-default',
                    'quit')
                }}
            </div>
        </div>

    </div>

{% endblock %}
